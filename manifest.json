{
    "name": "tomato app",
    "version": "2.0",
    "manifest_version": 2,
    "description": "Build an Extension!",
    "browser_action": {
        "default_icon": "icon.png"
      },
      "background" : {
        "scripts" : ["src/build/background.js"],
        "persistent": false
      },
      "permissions": [
        "activeTab",
        "tabs"
      ],
    
      "content_scripts": [
            {
                "matches": ["http://*/*", "https://*/*"],
                "js": ["src/build/main.js"]
            }
        ]
}